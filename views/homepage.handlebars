{{#each posts as |post|}}
<a href="/post/{{post.id}}">
<div class="card post-card mt-4 mx-auto">
    <div class="card-body d-flex justify-content-between bgs-primary">
        <div class="post-title">
            {{post.title}}
        </div>
        <div class="secondary">
            Posted by {{user.username}} on {{post.created_at}}
        </div>
    </div>
    <div class="bgs-secondary">
        <div class="primary p-3 ">
            {{post.content}}
        </div>
    </div>
</div>
</a>
{{/each}}
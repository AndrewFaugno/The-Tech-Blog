{{#each posts as |post|}}
<a href="/dashboard/edit/{{post.id}}">
    <div class="card post-card mt-4 mx-auto">
        <div class="card-body d-flex justify-content-between bgs-primary">
            <div class="post-title">
                {{post.title}}
            </div>
            <div class="secondary">
                {{format_date post.created_at}}
            </div>
        </div>
    </div>
</a>
{{/each}}

<div class="d-flex justify-content-center mt-5">
    <a href="/dashboard/create">
        <button class="btn d-flex justify-content-center bgs-primary secondary">
            + New Post
        </button>
    </a>
</div>
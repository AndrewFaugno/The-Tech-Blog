<div class="card post-card mt-4 mx-auto">
    <div class="card-body d-flex justify-content-between bgs-primary secondary">
        Create Post
    </div>
    <form class="login-form">
        <div class="primary p-3 bgs-secondary">
            <div>
                Title
                <div class="d-flex justify-content-center">
                    <textarea name="title" rows="2"></textarea>
                </div>
            </div>
            <div class="mt-3">
                Content
                <div class="d-flex justify-content-center">
                    <textarea name="content" rows="5"></textarea>
                </div>
            </div>
            <div class="mt-2">
                <button type="submit" class="w-100 mb-2 bgs-primary btn secondary">Update Post</button>
                <button type="submit" class="w-100 m-auto bgs-primary btn secondary">Delete</button>
            </div>
        </div>
    </form>
</div>
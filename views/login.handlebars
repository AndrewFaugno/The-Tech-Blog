<div class="card post-card mt-4 mx-auto">
    <div class="card-body d-flex justify-content-between bgs-primary">
    </div>
    <form class="login-form">
        <div class="primary p-3 bgs-secondary">
            <div>
                Username
                <div class="d-flex justify-content-center">
                    <label for="username-login"></label>
                    <input type="text" id="username-login" class="w-100"/>
                </div>
            </div>
            <div class="mt-3">
                Password
                <div class="d-flex justify-content-center">
                    <label for="password-login"></label>
                    <input type="password" id="password-login" class="w-100"/>
                </div>
            </div>
            <div class="mt-2">
                <button type="submit" class="w-100 m-auto bgs-primary btn secondary">Login</button>
                <a href="/signup">Sign up instead</a>
            </div>
        </div>
    </form>
</div>

<script src="/javascript/login.js"></script>

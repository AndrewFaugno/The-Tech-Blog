<div class="card post-card mt-4 mx-auto">
    <div class="card-body d-flex justify-content-between bgs-primary secondary">
        Edit Post
    </div>
    <form class="edit-post-form">
        <div class="primary p-3 bgs-secondary">
            <div>
                Title
                <div class="d-flex justify-content-center">
                    <textarea name="title" rows="2">{{post.title}}</textarea>
                </div>
            </div>
            <div class="mt-3">
                Content
                <div class="d-flex justify-content-center">
                    <textarea name="content" rows="5">{{post.content}}</textarea>
                </div>
            </div>
            <div class="mt-2">
                <button type="submit" class="w-100 mb-2 bgs-primary btn secondary" id="update-btn">Update Post</button>
                <button type="submit" class="w-100 m-auto bgs-primary btn secondary" id="delete-btn">Delete</button>
            </div>
        </div>
    </form>
</div>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<div class="card post-card mt-4 mx-auto">
    <div class="card-body d-flex justify-content-between bgs-primary">
    </div>
    <form class="signup-form">
        <div class="primary p-3 bgs-secondary">
            <div>
                Username
                <div class="d-flex justify-content-center">
                    <label for="username-signup"></label>
                    <input type="text" id="username-signup" class="w-100"/>
                </div>
            </div>
            <div class="mt-3">
                Password
                <div class="d-flex justify-content-center">
                    <label for="password-signup"></label>
                    <input type="password" id="password-signup" class="w-100"/>
                </div>
            </div>
            <div class="mt-2">
                <button type="submit" class="w-100 m-auto bgs-primary btn secondary">Sign Up</button>
                <a href="/login">Login instead</a>
            </div>
        </div>
    </form>
</div>

<script src="/javascript/signup.js"></script>